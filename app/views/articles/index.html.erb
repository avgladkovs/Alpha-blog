<h1>Articles LISTING</h1>
<p style="color: green">
<strong><%= link_to "NEW ARTICLE", new_article_path %></strong>
</p>
<table>
  <tr>
    <th style='align: center; text-decoration: underline'>ID</th>
    <th style='align: center; text-decoration: underline'>Title</th>
    <th style='align: center; text-decoration: underline'>Description</th>
  </tr>

<% @articles.each do |article| %>
  <tr style='font-size: 60%'>
    <td> <%= article.id %></td>
    <td> <%= article.title %></td>
    <td> <%= article.description %> </td>
    <td> <%= link_to "Show", article_path(article) %> </td>
    <td> <%= link_to "Edit", edit_article_path(article) %> </td>
  </tr>
<%end%>
</table>
